pipeline {
  agent any
    tools{
        jdk  'jdk17'
        maven  'maven3'
    }
    
    environment{
        SCANNER_HOME= tool 'sonar-scanner'
    }
    
    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main', changelog: false, poll: false, url: 'https://github.com/priya241302/Shopping-Cart.git'
            }
        }
        
        stage('COMPILE') {
            steps {
                sh "mvn clean compile -DskipTests=true"
            }
        }
        
        
        stage('Sonarqube') {
            steps {
                withSonarQubeEnv('sonar-server'){
                   sh ''' $SCANNER_HOME/bin/sonar-scanner -Dsonar.projectName=Shopping-Cart \
                   -Dsonar.java.binaries=. \
                   -Dsonar.projectKey=Shopping-Cart '''
               }
            }
        }
        
        stage('Build') {
            steps {
                sh "mvn clean package -DskipTests=true"
            }
        }
    
    stage('Build and Push Docker Image') {
      environment {
       // DOCKER_IMAGE = "priya247/shoppingcart:${BUILD_NUMBER}"
        // DOCKERFILE_LOCATION = "java-maven-sonar-argocd-helm-k8s/spring-boot-app/Dockerfile"
        //REGISTRY_CREDENTIALS = credentials('dockerhub')
        app = docker.build("priya247/shoppingcart")
      }
      steps {
        script {
          
            app = docker.build("priya247/shoppingcart")
            docker.withRegistry('https://index.docker.io/v1/', "dockerhub") {
               app.push("${env.BUILD_NUMBER}")
            }
        }
      }
    }
       stage('Update Deployment File') {
        environment {
            GIT_REPO_NAME = "Shopping-Cart"
            GIT_USER_NAME = "priya241302"
        }
        steps {
            withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                sh '''
                    git config user.email "haripriyapogaku@gmail.com"
                    git config user.name "priya241302"
                    BUILD_NUMBER=${BUILD_NUMBER}
                    # Clean up build artifacts and untracked files
                    sh "cat deploymentservice.yml"
                    sh "sed -i 's+priya247/shoppingcart.*+priya247/shoppingcart:${BUILD_NUMBER}+g' deploymentservice.yml"
                    sh "cat deploymentservice.yml"
                    sh "git add ."
                    sh "git commit -m 'By Jenkins Job changemanifest: ${BUILD_NUMBER}'"
                  
                   sh "git push https://${GIT_USERNAME}:${GIT_PASSWORD}@github.com/${GIT_USERNAME}/Shopping-Cart.git HEAD:main" 



                '''
            }
        }
    }
    
  }
}
